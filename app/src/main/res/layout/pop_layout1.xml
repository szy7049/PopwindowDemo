<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        app:tabTextColor="#000"
        app:tabIndicatorHeight="4dp"
        app:tabTextAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:tabSelectedTextColor="@android:color/holo_blue_dark"
        app:tabIndicatorColor="#0080ff">

    </android.support.design.widget.TabLayout>




    <android.support.v4.view.ViewPager

        android:layout_weight="1"
        android:id="@+id/pw_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"></android.support.v4.view.ViewPager>

    <TextView

        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>